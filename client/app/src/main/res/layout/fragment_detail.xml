<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFD54F"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:menu="@menu/detail_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_home_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="20dp"
                app:layout_constraintTop_toBottomOf="@+id/guideline_home_right" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_home_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/guideline_home_left"
                app:layout_constraintGuide_end="20dp"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_home_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="12dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_home_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="60dp" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_detail_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#C5E1A5"
                app:layout_constraintBottom_toTopOf="@+id/guideline_home_body"
                app:layout_constraintEnd_toStartOf="@+id/guideline_home_right"
                app:layout_constraintStart_toStartOf="@+id/guideline_home_left"
                app:layout_constraintTop_toTopOf="@+id/guideline_home_header" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_home_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="411dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/vp_detail_image"
                app:layout_constraintGuide_begin="280dp"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_home_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="12dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_home_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="30dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_home_content_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="310dp" />

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:textColor="@android:color/primary_text_light"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guideline_home_start"
                app:layout_constraintTop_toTopOf="@+id/guideline_home_content_header" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_home_content_body_basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="400dp" />

            <TextView
                android:id="@+id/tv_home_info_basic_header"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기본정보"
                android:textColor="@android:color/primary_text_light"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guideline_home_start"
                app:layout_constraintTop_toTopOf="@+id/guideline_home_content_body_basic" />

            <TextView
                android:id="@+id/tv_home_info_basic_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="주소"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/guideline_home_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_home_info_basic_header" />

            <TextView
                android:id="@+id/tv_home_info_basic_address_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경기 서대문구 xxx 333 yyy 999호"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline_home_right"
                app:layout_constraintTop_toTopOf="@+id/tv_home_info_basic_address" />

            <TextView
                android:id="@+id/tv_home_info_basic_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="연락처"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/guideline_home_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_home_info_basic_address" />

            <TextView
                android:id="@+id/tv_home_info_basic_phone_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000-1111-2222"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline_home_right"
                app:layout_constraintTop_toTopOf="@+id/tv_home_info_basic_phone" />

            <TextView
                android:id="@+id/tv_home_info_basic_roomcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="방 개수"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/guideline_home_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_home_info_basic_phone" />

            <TextView
                android:id="@+id/tv_home_info_basic_roomcount_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline_home_right"
                app:layout_constraintTop_toTopOf="@+id/tv_home_info_basic_roomcount" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_home_content_body_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="550dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_home_info_charge_header"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="요금정보"
                android:textColor="@android:color/primary_text_light"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guideline_home_start"
                app:layout_constraintTop_toTopOf="@+id/guideline_home_content_body_charge" />

            <TextView
                android:id="@+id/tv_home_info_charge_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline_home_right"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideline_home_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_home_info_charge_header" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_home_content_body_precautions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="700dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_home_info_precautions_header"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유의사항"
                android:textColor="@android:color/primary_text_light"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guideline_home_start"
                app:layout_constraintTop_toTopOf="@+id/guideline_home_content_body_precautions" />

            <TextView
                android:id="@+id/tv_home_info_precautions_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline_home_right"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideline_home_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_home_info_precautions_header" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_home_content_body_convenience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="850dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_home_info_convenience_header"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="편의정보"
                android:textColor="@android:color/primary_text_light"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guideline_home_start"
                app:layout_constraintTop_toTopOf="@+id/guideline_home_content_body_convenience" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="0dp"
                android:layout_height="160dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline_home_right"
                app:layout_constraintStart_toStartOf="@+id/guideline_home_start"
                app:layout_constraintTop_toTopOf="@+id/guideline_home_content_body_map" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_home_content_body_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="1000dp"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_home_content_body_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="1200dp"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_detail_reservate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFD54F"
        android:text="예약하기"
        android:textColor="#000" />

</LinearLayout>